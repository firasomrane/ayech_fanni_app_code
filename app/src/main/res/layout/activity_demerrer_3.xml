<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nourelhoudazribi.aaychfanni.demerrer_3">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/fan"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="3dp"
        android:layout_above="@+id/textView10"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp" />
    <TextView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="Vous êtes un fan, mais pas comme les autres?"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="25dp"
        tools:layout_editor_absoluteY="284dp"
        tools:layout_editor_absoluteX="40dp"
        android:gravity="center"
        android:id="@+id/textView10"
        android:layout_above="@+id/textView9"
        android:layout_alignStart="@+id/textView8" />
    <TextView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="Vous voulez être proche de votre artiste préféré? "
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="20dp"
        tools:layout_editor_absoluteY="342dp"
        tools:layout_editor_absoluteX="20dp"
        android:id="@+id/textView9"
        android:layout_above="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp" />
    <TextView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="Ayech Fannou !"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:textSize="25dp"
        android:gravity="center"
        tools:layout_editor_absoluteY="398dp"
        tools:layout_editor_absoluteX="40dp"
        android:id="@+id/textView8"
        android:layout_above="@+id/textView7"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp" />
    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Ici, vous pouvez contribuer à l’amélioration de ses conditions et l'encourager à continuer à faire vibrer votre cœur. "
        android:textColor="@color/black"
        android:textSize="20dp"
        android:gravity="center"
        tools:layout_editor_absoluteY="433dp"
        tools:layout_editor_absoluteX="40dp"
        android:id="@+id/textView7"
        android:layout_above="@+id/textView16"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/colorAccent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button10"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_demarrer_left"
        android:layout_alignTop="@+id/textView16"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp" />

    <Button
        android:id="@+id/button11"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_demarrer_right"
        android:layout_below="@+id/textView7"
        android:layout_alignEnd="@+id/imageView6" />


</RelativeLayout>
