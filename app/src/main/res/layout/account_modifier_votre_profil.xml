<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:background="@drawable/fond6"
    android:layout_width="wrap_content">

<LinearLayout
    android:id="@+id/edit_profile_top"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="100">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="30dp"
            android:layout_weight="10"
            android:layout_height="30dp"
            android:src="@drawable/ic_backarrow"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:id="@+id/the_text"
            android:layout_width="0dp"
            android:layout_weight="80"
            android:layout_height="match_parent"
            android:textAppearance="?android:textAppearanceMedium"
            android:text="Modifier votre profil"
            android:textSize="35px"
            android:paddingLeft="30dp"
            android:paddingTop="27px"
            />

        <ImageView
            android:id="@+id/save_changes"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_checkmark"
            android:layout_marginTop="10dp"
            android:layout_weight="10"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@android:color/darker_gray" />

</LinearLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/edit_profile_top">

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/snippet_center_editprofile"/>

</RelativeLayout>
</RelativeLayout>
