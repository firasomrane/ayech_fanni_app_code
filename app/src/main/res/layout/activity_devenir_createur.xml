<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fond6"
    tools:context="com.example.nourelhoudazribi.aaychfanni.devenir_createur">

    <EditText
        android:id="@+id/editText8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/editText7"
        android:layout_alignStart="@+id/editText7"
        android:gravity="center"
        android:hint="Lien URL Twitch"/>
    <TextView
        android:id="@+id/textView12"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@android:color/transparent"
        android:text="Création d'un compte créateur de contenu"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        android:gravity="center"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_marginTop="65dp"
        android:background="@color/black" />
    <Button
        android:id="@+id/arriere_createur"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_black_left"
        android:layout_alignBaseline="@+id/textView12"
        android:layout_alignBottom="@+id/textView12"
        android:layout_alignStart="@+id/textView13" />

    <EditText
        android:id="@+id/editText7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editText6"
        android:layout_below="@+id/editText6"
        android:layout_marginTop="46dp"
        android:ems="10"
        android:hint="Lien URL Twitter"
        android:gravity="center"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/editText6"
        android:layout_alignStart="@+id/editText6"
        android:hint="Lien URL Youtube"
        android:gravity="center"/>

    <EditText
        android:id="@+id/editText6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:gravity="center"
        android:hint="Lien URL Facebook"
        android:inputType="textPersonName"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/textView2" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_above="@+id/editText6"
        android:layout_alignStart="@+id/editText4"
        android:layout_marginBottom="43dp" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginBottom="43dp"
        android:layout_marginEnd="53dp"
        android:layout_above="@+id/editText3"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="95dp"
        android:textSize="15dp"
        android:layout_height="wrap_content"
        android:text="Emplacement"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/editText3"
        android:layout_alignBottom="@+id/editText3"
        android:layout_toStartOf="@+id/editText3" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="90dp"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="Décrire votre activité"
        android:layout_alignTop="@+id/editText4"
        android:layout_toStartOf="@+id/editText4" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="90dp"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="Insérer vos liens"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/editText3" />

    <Button
        android:id="@+id/button4"
        android:layout_width="126dp"
        android:layout_height="30dp"
        android:layout_marginBottom="31dp"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded"
        android:layout_centerHorizontal="true"
        android:text="Continuer"
        android:layout_alignParentBottom="true"
         />

</RelativeLayout>
