<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#8f0d25" />
            <gradient android:angle="-90" android:startColor="#8f0d25" android:endColor="#e94d69"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#e94e6a" />
            <solid android:color="#ef667f"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ef6780" />
            <gradient android:angle="-90" android:startColor="@color/colorAccent" android:endColor="#ef6881" />
        </shape>
    </item>
</selector>