<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/colorPrimaryDark" />
            <gradient android:angle="-90" android:startColor="#181e48" android:endColor="#8e99de"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#a6b0ed" />
            <solid android:color="#b0b8ea"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#a6b0ed" />
            <gradient android:angle="-90" android:startColor="#7079b6" android:endColor="#a6afe7" />
        </shape>
    </item>
</selector>